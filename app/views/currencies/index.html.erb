<p style="color: green"><%= notice %></p>

<h1>Currencies</h1>

<div>
  <%= form_tag currencies_path, method: :get do %>
    <%= text_field_tag 'search', nil, placeholder: "search" %>
    <%= submit_tag "search" %>
  <% end %>
</div>

<div class="w-1/2 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="cards" class="min-w-full">
    <div id="currencies">
      <% @currencies.each do |currency| %>
        <%= link_to currency_path(currency) do %>
          <div>
            <%= render currency %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="pager" class="min-w-full my-8 flex justify-between">
    <div>
      <% if @pagy.prev %>
        <%= link_to "< Previous page", currencies_path(page: @pagy.prev, search: params[:search]), class: "rounded py-3 px-5 bg-gray-600 text-white block hover:bg-gray-800" %>
      <% end %>
    </div>
    <div class="text-right">
      <% if @pagy.next %>
        <%= link_to "Next page >", currencies_path(page: @pagy.next, search: params[:search]), class: "rounded py-3 px-5 bg-gray-600 text-white block hover:bg-gray-800" %>
      <% end %>
    </div>
  </div>
</div>
