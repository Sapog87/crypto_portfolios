<p style="color: green"><%= notice %></p>

<h1>Currencies</h1>

<div style="width: 50%">
  <%= form_tag currencies_path, method: :get do %>
    <input name="search" type="search" class="form-control" id="floatingSearch" placeholder="search">
    <div style="margin-left: 105%; margin-top: -6%; width: 100%">
      <input name="commit" data-disable-with="Search" type="submit" value="Search" class="btn btn-outline-dark" />
    </div>
  <% end %>
</div>

<div class="w-1/2 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div style = "margin-top: 3%; width: 0%" id="cards" class="min-w-full">
    <div id="currencies">
      <% @currencies.each do |currency| %>
        <%= link_to currency_path(currency), class: "btn" do %>
          <div>
            <%= render currency %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id="pager" class="pagination" role="navigation" aria-label="Pagination">
    <div>
      <% if @pagy.prev %>
        <%= link_to "< Previous page", currencies_path(page: @pagy.prev, search: params[:search]), class: "btn btn-outline-dark btn-sm" %>
      <% end %>
    </div>
    <div class="text-right" style="margin-left: 0.5%">
      <% if @pagy.next %>
        <%= link_to "Next page >", currencies_path(page: @pagy.next, search: params[:search]), class: "btn btn-outline-dark btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
