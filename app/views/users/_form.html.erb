<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
  <form class="mx-1 mx-md-5 ">
    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <label for="user_name">Name:</label>
        <input name="user[name]" type="text"  class="form-control" id="floatingUserName" placeholder="name">
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <label for="user_email">Email:</label>
        <input name="user[email]" type="text"  class="form-control" id="floatingUserEmail" placeholder="name@example.com">
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <label for="user_password">Password:</label>
        <input name="user[password]" type="password" class="form-control" id="floatingUserPassword" placeholder="password">
      </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
      <div class="form-outline flex-fill mb-0">
        <label for="confirm_password">Confirm Password:</label>
        <input name="user[password_confirmation]" type="password" class="form-control" id="user_password_confirmation" placeholder="password">
      </div>
    </div>

  <div class="text-center mb-5" style="color: #252428; font-family: Arial">
    <input type="submit" name="commit" value="Create Account" data-disable-with="Create Account" class="btn btn-outline-dark">
  </div>
<% end %>
</form>